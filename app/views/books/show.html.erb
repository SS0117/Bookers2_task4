

<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render "users/userInfo", user: @user %>
      <%= render "new", book: @book %>
    </div>
    <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book_dil.user.id) do %>
                <%= image_tag @book_dil.user.get_profile_image(100,100) %>
                </br>
                <%= @book_dil.user.name %>
              <% end %>
            </td>

            <td><%= link_to @book_dil.title, book_path(@book_dil.id) %></td>

            <td><%= @book_dil.body %></td>

            <td><%= render "favorites/fav", book: @book_dil %></td>

            <td>コメント数:<%= @book_dil.book_comments.count %></td>

            <% if @book_dil.user == current_user %>
              <td>
                <%= link_to "Edit", edit_book_path(@book_dil) %>
              </td>
              <td>
                <%= link_to "Destroy", book_path(@book_dil), method: :delete %>
              </td>
            <% end %>

          </tr>
        </tbody>

    </table>
    </div>

    <ul class="list-unstyled">
       <% @book_dil.book_comments.each do |comment| %>
          <li class="media">
            <%= image_tag comment.user.get_profile_image(64,64) %>
              <div class="media-body ml-2">
                <h5 class="mt-0 mb-1">
                  <%= link_to comment.user.name, user_path(comment.user.id) %>
                    <% if current_user == comment.user %>
                        <%= link_to "Destroy", book_book_comment_path(comment.book.id, comment.id), method: :delete, class: "btn btn-sm btn-danger" %>
                    <% end %>
                </h5>
                <%= comment.comment %>
              </div>
          </li>
      <% end %>
    </ul>

  </div>
</div>


<%= form_with model: [@book_dil, @book_comment] do |f| %>
  <div class="form-group">
    <%= f.text_area :comment, class: "form-control" %>
  </div>
  <%= f.submit "送信", class: "btn btn-primary" %>
<% end %>


