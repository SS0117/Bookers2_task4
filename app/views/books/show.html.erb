

<div>
  <%= render "users/userInfo", user: @user %>
  <%= render "new", book: @book %>
</div>


<h2>Book detail</h2>
<table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(@book_dil.user.id) do %>
            <%= image_tag @book_dil.user.get_profile_image(100,100) %>
            </br>
            <%= @book_dil.user.name %>
          <% end %>
        </td>

        <td><%= link_to @book_dil.title, book_path(@book_dil.id) %></td>

        <td><%= @book_dil.body %></td>

        <% if @book_dil.user == current_user %>
          <td>
            <%= link_to "Edit", edit_book_path(@book_dil) %>
          </td>
          <td>
            <%= link_to "Destroy", book_path(@book_dil), method: :delete %>
          </td>
        <% end %>

      </tr>
    </tbody>

</table>

