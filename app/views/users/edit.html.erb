<div>

  <h2>
    User info
  </h2>

  <%= form_with model: @user do |f| %>

    <div class="form-group">
      <label for="user_name">Name</label>
      <%= f.text_field :name, class: "form-control name", id: "user_name" %>
    </div>

    <div class="form-group">
      <label for="user_image">Image</label>
      <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
    </div>

    <div class="form-group">
      <label for="user_introduction">Introduction</label>
      <%= f.text_field :introduction, class: "form-control introduction", id: "user_introduction" %>
    </div>

    <%= f.submit "Update User", class: "btn btn-success" %>
  <% end %>

</div>